// +---------------------------------------------------------------------------
// +  Datei: css/lectures-layout-channel-four.css
// +  AutorIn: w dot doeringer (at fh-worms dot de)
// +  Beschreibung: Ergänzung für "channel four" - 80rem breakpoint für  iPad
// +  KorrektorIn:
// +  Status:   2015/02/01 jigsaw.w3.org/css-validator/validator as CSS3 (-)
// +  Revision: 2025/02/03 - Details am Ende der Datei
// +---------------------------------------------------------------------------
*/

/* --- wie Tablet portrait ----------------------------------------------- */
@media screen and (min-width:80rem) {
  body { font-size:92.5%!important; }
}    
/* --- Näher an SmartPhone wenn zweiseitig ------------------------------- */
@media screen and (max-width:79.99rem) {
  body { font-size:85%!important; }
}    

/* --- volle Breite bleibt erhalten -------------------------------------- */
section.ui-widget.fullwidth { clear:both; }

/* --- zweiseitig -------------------------------------------------------- */
/* ---  Nachbesserung wegen iPad: Höhe der Seiten bei max-width:80rem ---- */
section.ui-widget:not(.fullwidth) { float:left; width:49.9%; }
section.ui-widget:not(.fullwidth) div.ui-widget-content { padding:2em; }
@media screen and (min-width:80rem) {
  section.ui-widget:not(.fullwidth) div.ui-widget-content { height:36rem!important; }
}
@media screen and (max-width:79.99rem) {
  section.ui-widget:not(.fullwidth) div.ui-widget-content { height:44rem!important; }
}

section.ui-widget:not(.fullwidth) div.ui-widget-content > *:first-child{ margin-top:0em!important; }

/* --- positionsabhängig: data-display=content: alle Seiten (auch ohne JavaScript! --- */
body[data-display=content] section.ui-widget:not(.fullwidth):nth-of-type(2n+1) { clear:both; } /* links */
body[data-display=content] section.ui-widget:not(.fullwidth):nth-of-type(2n+1) div.ui-widget-content { padding-left:3em; }
body[data-display=content] section.ui-widget:not(.fullwidth):nth-of-type(2n) div.ui-widget-content { padding-right:3em; }
body[data-display=content] section.ui-widget:not(.fullwidth):nth-of-type(2n+1) footer:before  { float:left; padding-left:0.8em; }
body[data-display=content] section.ui-widget:not(.fullwidth):nth-of-type(2n+1) footer > img { right:1em; }
body[data-display=content] section.ui-widget:not(.fullwidth):nth-of-type(2n) footer > img { left:1em;  }

/* --- positionsabhängig: data-display=summary (nur mit JavaScript) --- */
body[data-display=summary] section.ui-widget:not(.summary) { margin-bottom:0em; }
body[data-display=summary] section.ui-widget.summary-left { clear:both; }
body[data-display=summary] section.ui-widget.summary-left div.ui-widget-content{ padding-left:3em; }
body[data-display=summary] section.ui-widget.summary-right div.ui-widget-content { padding-right:3em; }
body[data-display=summary] section.ui-widget.summary-left footer:before { float:left; padding-left:0.8em; }
body[data-display=summary] section.ui-widget.summary-left footer > img { left:95%; }

