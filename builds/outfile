/* --- .toc ---------------------------------------------------------------- */
section.ui-widget.toc > div.ui-widget-content {
  display:table; width:100%; border-collapse:collapse;
  min-height:0em; height:auto;                    /* CHROME, OPERA */
}
ul.toc.content { display:table-row; }
ul.toc.content > li { display:table-cell; width:25%; padding-bottom:0em; border-right:1pt solid; border-bottom:2pt solid; height:7.5em; }
ul.toc.content > li > span { display:none; }
ul.toc.content > li p:first-of-type { border:hidden; border-bottom:1pt solid; }
ul.toc.content > li p:nth-of-type(n+2) { padding:0.25em 0.5em; }
ul.toc.content > li p:nth-of-type(n+2) > span { font-size:85%; display:block; }
ul.toc.content > li p:nth-of-type(2) > span:first-of-type { font-size:100%; display:block; }
ul.toc.content > li > p[title] { margin-left:0em!important; }
ul.toc.content > li > p[title] span.small { font-size:100%!important; }

/* --- .exam: PrÃ¼fungssachen ----------------------------------------------- */
ul.toc.exam { position:fixed; top:0.15em; right:6em; z-index:2; }
ul.toc.exam li { display:inline-block; padding:0.5em 0.25em; margin-left:-0.25em; }
ul.toc.exam > li > span:first-of-type { position:absolute; font-size:50%; left:2.5em; top:0.75em; }
ul.toc.exam > li p:nth-of-type(n+2) { position:absolute; right:1em; bottom:0.25em; font-size:50%; font-weight:normal; padding:0.25em 0.5em; }
ul.toc.exam > li.open div a { cursor:default; }

/* --- animation --- */
@keyframes slidedown {
  0% {
    top:-4em;
  }
  100% {
    top:0.15em;
  }
}
ul.toc.exam {
  transition-property:top;
  animation: 1s ease-out 0s 1 slidedown;
}

